{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "platforms": [
    "macOS",
    "windows",
    "linux"
  ],
  "description": "enables the default app permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "updater:default",
    "fs:allow-download-write",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://**"
        }
      ]
    }
  ]
}